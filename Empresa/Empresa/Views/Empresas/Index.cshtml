@model IEnumerable<CadastroEmpresa.Models.Empresa>

@{
    ViewData["Title"] = "Index";
    string PorCNPJ = ViewData["PorCNPJ"]?.ToString();
    string PorNome = ViewData["PorNome"]?.ToString();
    string Valor = ViewData["Valor"]?.ToString();
}

<div class="lista">
    <h4><b>EMPRESAS CADASTRADAS</b></h4>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Filtrar">
            <h6>PESQUISAR</h6>
            <input class="form-control" name="valor" value=@Valor placeholder="Digite o Nome ou CNPJ da Empresa" />
            <input type="radio" value="PorCNPJ" id="Filtro" name="tipoFiltro" checked=@PorCNPJ />CNPJ<br />
            <input type="radio" value="PorNome" id="Filtro" name="tipoFiltro" checked=@PorNome />Nome<br />
            <div class="form-group">

                <input type="submit" value="Pesquisar" class="btn btn-dark " />
                <a asp-action="Index">Voltar a Lista</a>
                <div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="tabela">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CNPJ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeFantasia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNPJ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeFantasia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><font size="2" color="#A12C32">Editar</font></a><br />
                        <a asp-action="Details" asp-route-id="@item.Id"><font size="2" color="#A12C32">Detalhes</font></a><br />
                        <a asp-action="Delete" asp-route-id="@item.Id"><font size="2" color="#A12C32">Apagar </font></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<a asp-action="Create"><b><u><font color="#A12C32">CADASTRAR EMPRESA</b></u></font></a>






</div>
